"""


import sys
import pymysql
import datetime
from bs4 import BeautifulSoup

try:
    import urllib.request as urllib2
except ImportError:
    import urllib2
    
pw = ''
dbuser = ''
db = ''
dbhost = ''

dbconn = pymysql.connect(host= dbhost,
                         user= dbuser,
                         passwd= pw,
                         db= db,
                         use_unicode=True,
                         charset="utf8mb4")
cursor = dbconn.cursor()


insertCommitters = 'INSERT INTO apache_committers (datasource_id, \
                                                svn_id, \
                                                real_name, \
                                                project_name, \
                                                role_on_project, \
                                                last_updated,\
                                                organization_name) \
                                                VALUES  (%s, %s, %s, %s,%s, %s, %s)'
                    
# Project Information
teamUrl = 'http://juddi.apache.org/team-list.html'
project_name = 'juddi'
role = 'Committer'
data_id = 70933

 
hdr = {'User-Agent': 'Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.11 (KHTML, like Gecko) Chrome/23.0.1271.64 Safari/537.11',
       'Accept': 'text/html,application/xhtml+xml,application/xml;q=0.9,*/*;q=0.8',
       'Accept-Charset': 'ISO-8859-1,utf-8;q=0.7,*;q=0.3',
       'Accept-Encoding': 'none',
       'Accept-Language': 'en-US,en;q=0.8',
       'Connection': 'keep-alive'}
 
try:
    req = urllib2.Request(teamUrl,headers=hdr)
    teamHtml = urllib2.urlopen(req).read()
    soup = BeautifulSoup(teamHtml, 'html.parser')
    table = soup.find('tbody')

    #parser to get names and organizations
    j = 0
    while True:
        row = table.find_all('tr')
        currRow = row[j]
        cells = currRow.find_all('td')
        screen_name = cells[0].contents[0]
        real_name = cells[1].contents[0]
        try:
            real_name = real_name.contents[0]
        except:
            pass
        organization = cells[4].contents[0]
        try:
            organization = organization.split(',')[0]
        except:
            pass
        
        j = j + 1
        time = datetime.datetime.now()  
        print((data_id, screen_name, real_name, project_name, role, time, organization))   
      
        try:     
            cursor.execute(insertCommitters, (data_id, screen_name, real_name, project_name, role, time, organization))
            dbconn.commit()
        
        except pymysql.Error as error:
               print(error)
               dbconn.rollback()        
except:
    pass
